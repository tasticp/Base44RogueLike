{
  "name": "base44-roguelike",
  "version": "2.0.0",
  "description": "A reverse roguelike game built with Base44, React, and a native Node.js backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev:server": "node src/server.js",
    "dev:client": "vite",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "build": "vite build",
    "test": "node tests/run-tests.js",
    "test:unit": "node tests/unit/run.js",
    "test:integration": "node tests/integration/run.js",
    "test:coverage": "node tests/coverage.js",
    "lint": "echo 'Linting with native Node.js tools'",
    "format": "echo 'Formatting with native Node.js tools'",
    "health": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.263.0",
    "date-fns": "^2.30.0",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0"
  },
  "keywords": ["roguelike", "game", "base44", "react", "dungeon"],
  "author": "Base44 Developer",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tasticp/Base44RogueLike.git"
  },
  "bugs": {
    "url": "https://github.com/tasticp/Base44RogueLike/issues"
  },
  "homepage": "https://github.com/tasticp/Base44RogueLike#readme"
}